<meta-model>

    <!--
     ~ This file contains all HTML4 elements that are obsolete since HTML5
     ~ For a comprehensive list of all obsolete elements, see: http://www.w3.org/TR/html5/obsolete.html
     -->

    <!-- ========= Obsolete HTML4 elements ========= -->

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="acronym"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="Acronym" icon="CordovaIcons.Palette.TextView"/>

        <properties inplace="text">
            <important>
                <property name="text" displayName="Text" type="String"/>
            </important>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="applet"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="Java Applet" icon="CordovaIcons.Palette.TextureView"/>

        <properties>
            <important>
                <property name="name" displayName="Name" type="String"/>
            </important>
            <normal>
                <property name="align" displayName="Align" type="Enum">
                    <enum-item name="left" displayName="Left"/>
                    <enum-item name="right" displayName="Right"/>
                    <enum-item name="top" displayName="Top"/>
                    <enum-item name="bottom" displayName="Bottom"/>
                    <enum-item name="middle" displayName="Middle"/>
                    <enum-item name="baseline" displayName="Baseline"/>
                </property>
                <property name="alt" displayName="Alternative Text" type="String"/>
                <property name="archive" displayName="Archive" type="String"/>
                <property name="code" displayName="Code" type="String"/>
                <property name="codeBase" displayName="Code Base" type="String"/>
                <property name="height" displayName="Height" type="Integer"/>
                <property name="width" displayName="Width" type="Integer"/>
                <property name="vspace" displayName="Vertical Space" type="Integer"/>
                <property name="object" displayName="Object" type="String"/>
            </normal>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="basefont"
          obsolete="true"
          showInComponentTree="false"/>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="big"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="Big Text" icon="CordovaIcons.Palette.TextView"/>

        <properties inplace="text">
            <important>
                <property name="text" displayName="Text" type="String"/>
            </important>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="center"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="Centering Block" icon="CordovaIcons.Palette.TextView"/>

        <properties inplace="text">
            <important>
                <property name="text" displayName="Text" type="String"/>
            </important>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="dir"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="Directory" icon="CordovaIcons.Palette.ListView"/>

        <properties>
            <normal>
                <property name="compact" displayName="Compact Style" type="Empty"/>
            </normal>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="font"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="Font Style Override" icon="CordovaIcons.Palette.TextView"/>

        <properties inplace="text">
            <important>
                <property name="text" displayName="Text" type="String"/>
            </important>
            <normal>
                <property name="color" displayName="Color" type="Color"/>
                <property name="face" displayName="Font Face" type="String"/>
                <property name="size" displayName="Font Size" type="Integer"/>
            </normal>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="frame"
          obsolete="true">

        <presentation title=" - &quot;%name%&quot;"/>

        <palette title="Frame" icon="CordovaIcons.Palette.FrameLayout"/>

        <properties>
            <important>
                <property name="name" displayName="Name" type="String"/>
                <property name="src" displayName="Source" type="String"/>
            </important>
            <normal>
                <property name="frameborder" displayName="Frame Border Visibility" type="Enum">
                    <enum-item name="0" displayName="Hide Frame Borders"/>
                    <enum-item name="1" displayName="Show Frame Borders"/>
                </property>
                <property name="marginheight" displayName="Margin Height" type="Integer"/>
                <property name="marginwidth" displayName="Margin Width" type="Integer"/>
                <property name="noresize" displayName="Prohibit Resizing" type="Empty"/>
                <property name="scrolling" displayName="Scrollbar Mode" type="Enum">
                    <enum-item name="yes" displayName="Show Scollbars"/>
                    <enum-item name="no" displayName="Hide Scrollbars"/>
                    <enum-item name="auto" displayName="Auto"/>
                </property>
            </normal>
            <expert>
                <property name="longdesc" displayName="Link to Long Description" type="String"
                          tooltip="Specifies a link to a long description of the frame. This description should
                                   supplement the short description provided using the title attribute, and may be
                                   particularly useful for non-visual user agents."/>
            </expert>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="frameset"
          obsolete="true">

        <palette title="Frameset" icon="CordovaIcons.Palette.GridLayout"/>

        <properties>
            <normal>
                <property name="cols" displayName="Columns" type="Integer"/>
                <property name="rows" displayName="Rows" type="Integer"/>
            </normal>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="noframes"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="No-Frame Fallback" icon="CordovaIcons.Palette.TextView"/>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="strike"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="Striked Text" icon="CordovaIcons.Palette.TextView"/>

        <properties inplace="text">
            <important>
                <property name="text" displayName="Text" type="String"/>
            </important>
        </properties>
    </meta>

    <meta model="org.cordovastudio.editors.designer.model.RadViewComponent"
          tag="tt"
          obsolete="true">

        <presentation title=" - &quot;%text%&quot;"/>

        <palette title="Teletype Text" icon="CordovaIcons.Palette.TextView"/>

        <properties inplace="text">
            <important>
                <property name="text" displayName="Text" type="String"/>
            </important>
        </properties>
    </meta>
</meta-model>
