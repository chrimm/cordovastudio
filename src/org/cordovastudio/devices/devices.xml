<d:devices
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:d="http://schemas.cordovastudio.org/devices">
    <d:device>
        <d:manufacturer></d:manufacturer>
        <d:name></d:name>
        <d:displayname></d:displayname>
        <d:artwork basepath="">
            <d:portrait>
                <d:filename></d:filename>
            </d:portrait>
            <d:landscape>
                <d:filename></d:filename>
            </d:landscape>
            <d:icon>
                <d:filename></d:filename>
            </d:icon>
        </d:artwork>
        <d:dimensions>
            <d:isround></d:isround>
            <d:portrait>
                <d:display>
                    <d:height></d:height>
                    <d:width></d:width>
                </d:display>
                <d:outer>
                    <d:height></d:height>
                    <d:width></d:width>
                </d:outer>
                <d:offset>
                    <d:top></d:top>
                    <d:left></d:left>
                </d:offset>
            </d:portrait>
            <d:landscape>
                <d:display>
                    <d:height></d:height>
                    <d:width></d:width>
                </d:display>
                <d:outer>
                    <d:height></d:height>
                    <d:width></d:width>
                </d:outer>
                <d:offset>
                    <d:top></d:top>
                    <d:left></d:left>
                </d:offset>
            </d:landscape>
        </d:dimensions>
        <d:states>
            <d:state name="landscape">
                <d:displayname>Landscape</d:displayname>
                <d:description>Phone in landscape view with status bar visible</d:description>
                <d:orientation>landscape</d:orientation>
                <d:statusbar>
                    <d:visible>true</d:visible>
                    <d:height></d:height>
                </d:statusbar>
            </d:state>
            <d:state name="portrait">
                <d:displayname>Portrait</d:displayname>
                <d:description>Phone in portrait view</d:description>
                <d:orientation>portrait</d:orientation>
            </d:state>
        </d:states>
    </d:device>
</d:devices>